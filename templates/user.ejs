<!doctype html>
<html>
    <head>
        <title>Edit profile</title>

        <meta charset="utf-8"> 
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
        <link rel="shortcut icon" href="../favicon.ico">

        <link rel="localizations" type="application/l10n+json" href="../locales.json">
        <script type="text/javascript" src="../static/js/html10n.js"></script>
        <script type="text/javascript" src="../static/js/l10n.js"></script>


    <script src="../static/plugins/ep_maadix/static/js/client/less.js" type="text/javascript"></script>
    <script src="../static/plugins/ep_maadix/static/js/client/jquery.js" type="text/javascript"></script>
    <script src="../static/plugins/ep_maadix/static/js/client/documentReadyRefresh.js" type="text/javascript"></script>
    <script src="../static/plugins/ep_maadix/static/js/client/retina.js" type="text/javascript"></script>
    <link href="../static/plugins/ep_maadix/static/css/custom.css" rel="stylesheet"> 
  </head>
        <header>
                <div class="header-block header-block-buttons">
                  <a class="btn btn-sm header-btn" href="../dashboard"><i class="demo-icon icon-home home-menu">&#xe81d;</i> My Groups</a> | 
                        <% if (settings.public_pads) { %>
                          <a class="btn btn-sm header-btn" href="../home">Public Pad</a> |
                        <% } %>
                        <a class="btn btn-sm header-btn" href="../help">Help</a>
    </div>
          <div class="header-block header-block-nav">
                  <ul id="profile">
                    <li>
                        <span class="name"><i class="demo-icon icon-user">&#xe800;</i>  <%= user[0].name %> <i class="demo-icon icon-down-dir-1">&#xe818;</i></span>
                      <ul>
                        <li><a class="dropdown-item" href="../user/<%= userid %>">My Profile</a></li>
                        <li><a class="dropdown-item" href="../logout">Logout</a></li>
                      </ul>
                    </li>
                  </ul>
</div>                </div>

        </header>  
    <article class="content items-list-page">  
        <div id="wrapper">
                        <div class="title-block">
                            <div class="row">
                                <div class="col-md-12">
                                </div>
                            </div>    
                        </div>

            <div id="inner">
                <% if (errors.length) { %>
                    <div class="errors">
                    <% errors.forEach(function (item) { %>
                        <div class="error"><%= item.toString() %></div>
                    <% }) %>
                    </div>
                <% } %>
                <div id="formblock" class="confirm">
                <form id="formEtherpadEditProfile" method="post" class="white" autocomplete="off">
                    <div class="title-block">
                      <h3 class="title" lang="en">Edit profile</h3>                    
                    </div>
                    <label for ="email">E-mail</label>
                    <input type="email" name="email" id="email" placeholder="<%= user[0].email %>" class="smallMarginBottom" >
                    <label for ="username">Username</label>
                    <input type="text" name="username" id="username" placeholder="<%= user[0].name %>" >

                    <label for ="fullname">Fullname</label>
                    <input type="text" name="fullname" id="fullname" placeholder="<%= user[0].FullName%>" readonly>

                    <label for ="password">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password" readonly>

                    <label for ="passwordrepeat">Repeat password</label>
                    <input type="password" name="passwordrepeat" id="passwordrepeat" placeholder="Confirm Password" > 

                    <input type="hidden" name="baseurl" id="baseurl" value="<%= baseurl %>">
                    <input type="hidden" name="userid" id="userid" value="<%= userid %>">
                    <button type="submit" lang="en">Save changes</button>
                </form>
              </div>
            </div>
        </div>
    </article>
</html>
<script src="../static/plugins/ep_maadix/static/js/client/end.js" type="text/javascript"></script>
