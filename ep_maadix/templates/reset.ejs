<!doctype html>
<html>
    <head>
        <title>Reset Password</title>

        <meta charset="utf-8"> 
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
        <link rel="shortcut icon" href="favicon.ico">

        <link rel="localizations" type="application/l10n+json" href="../locales.json">
        <script type="text/javascript" src="../static/js/html10n.js"></script>
        <script type="text/javascript" src="../static/js/l10n.js"></script>


    <script src="../static/plugins/ep_maadix/static/js/client/less.js" type="text/javascript"></script>
    <script src="../static/plugins/ep_maadix/static/js/client/jquery.js" type="text/javascript"></script>
    <script src="../static/plugins/ep_maadix/static/js/client/documentReadyRefresh.js" type="text/javascript"></script>
    <script src="../static/plugins/ep_maadix/static/js/client/retina.js" type="text/javascript"></script>
    <link href="../static/plugins/ep_maadix/static/css/custom.css" rel="stylesheet"> 
  </head>
    <article class="content items-list-page">  
        <div id="wrapper">
                        <div class="title-block">
                            <div class="row">
                                <div class="col-md-12">
                                </div>
                            </div>    
                        </div>

            <div id="inner">
                <% if (errors.length) { %>
                    <div class="errors">
                    <% errors.forEach(function (item) { %>
                        <div class="error"><%= item.toString() %></div>
                    <% }) %>
                    </div>
                <% } %>
                <div id="formblock" class="confirm">

                <form id="formEtherpadReset" method="post" class="white" autocomplete="off">
                    <div class="title-block">
                      <h3 class="title" lang="en"> Reset password</h3>                    
                    </div>
                    <label for="email">E-mail (please use the same email account you want to change te password for)</label>
                    <input type="text" name="email" id="email" placeholder="E-mail address" class="smallMarginBottom" required>
                    <label for="password">New password</label>
                    <input type="password" name="password" id="password" placeholder="Password" required>
                    <label for="passwordrepeat">Repeat new password</label>
                    <input type="password" name="passwordrepeat" id="passwordrepeat" placeholder="Confirm Password" required> 
                    <input type="hidden" name="baseurl" id="baseurl" value="">
                    <input type="hidden" name="tok" id="tok" value="<%= tok %>">
                    <button type="submit" lang="en">Reset Password</button>
                </form>
              </div>
            </div>
        </div>
    </article>
</html>
<script src="../static/plugins/ep_maadix/static/js/client/end.js" type="text/javascript"></script>
