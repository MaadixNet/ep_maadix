<!doctype html>
<html>
  <head>
    <title>Etherpad</title>

    <meta charset="utf-8"> 
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="localizations" type="application/l10n+json" href="locales.json">
    <script type="text/javascript" src="static/js/html10n.js"></script>
    <script type="text/javascript" src="static/js/l10n.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>

    <script src="static/plugins/ep_maadix/static/js/client/less.js" type="text/javascript"></script>
    <script src="static/plugins/ep_maadix/static/js/client/jquery.js" type="text/javascript"></script>
    <script src="static/plugins/ep_maadix/static/js/client/documentReadyRefresh.js" type="text/javascript"></script>
    <script src="static/plugins/ep_maadix/static/js/client/retina.js" type="text/javascript"></script>
    <script src="static/plugins/ep_maadix/static/js/client/end.js" type="text/javascript"></script>
      
    <link href="static/plugins/ep_maadix/static/css/custom.css" rel="stylesheet"> 

  </head>
  <body>
  <header>
        <% if (authenticated) { %>
                <div class="header-block header-block-buttons">
                        <a class="btn btn-sm header-btn" href="dashboard">My Groups</a> |
                        <% if (settings.public_pads) { %>
                          <a class="btn btn-sm header-btn" href="">Public Pad</a> |
                        <% } %>
                        <a class="btn btn-sm header-btn" href="help">Help</a>
                </div>
                <div class="header-block header-block-nav">
                  <ul id="profile">
                    <li>
                        <span class="name"><i class="demo-icon icon-user">&#xe800;</i>  <%= username %> <i class="demo-icon icon-down-dir-1">&#xe818;</i></span>
                      <ul>
                        <li><a class="dropdown-item" href="user/<%= userid %>">My Profile</a></li>
                        <li><a class="dropdown-item" href="./logout">Logout</a></li>
                      </ul>
                    </li>
                  </ul>
                </div>

        <% } else { %>
                <div class="header-block header-block-nav">
                  <ul id="profile">
                    <li><span class="name"><a href="login"><i class="demo-icon icon-user">&#xe800;</i>  Login</a></span>
                    </li>
                  
                <%if (settings.register_enabled ==1) { %>
                    <li><a class="button" href="register">Register</a></li>
                  <% } %>
                  </ul>
                </div>

        <% } %>
</header> 
      <article class="content items-list-page">
                <% if (settings.public_pads ==1) { %>
                  <div id="formblock">
                    <div class="inputBlock">
                      <h4 lang="en">Create/Open a Public Pad by specific or random name</h4>
                      <form class="white">
                        <input type="text" placeholder="Pad-Name" id="createPadName">
                        <button type="submit" lang="en" id="createPublicPadByName">Create</button>
                        <button type="submit" lang="en" id="createPublicPadRandomName" class="longButton">Create Public Pad with random name</button>
                      </form>
                    </div>
                  </div>
                </div>
                <% } else { %>
                <h2 class="title center" >Only private pads are allowed.</h2>
                <% } %>
                
      </article>
    </body>       
  </html>
<script>
  $(document).ready(function(){
    $('#baseurl').val(window.location.origin);
    console.log('document.location.origin ' + document.location.origin);
  });
</script>
